{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",

    "esModuleInterop": true,
    "allowJs": true,

    // TODO: Enable before release
    // "strict": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,

    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "typeRoots": ["../../node_modules/@types", "src/types"]
  }
}
