{
  "name": "azero-wallet",
  "version": "0.1.2",
  "description": "Aleph Zero Wallet snap",
  "keywords": [
    "aleph-zero",
    "wallet",
    "metamask",
    "snap"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/piotr-roslaniec/azero-snap"
  },
  "license": "GPL-3.0",
  "author": "Piotr Roslaniec <p.roslaniec@gmail.com>",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean && pnpm build:fix-deps && pnpm build:tsc && pnpm build:snap && pnpm build:fix-bundle && cp snap.manifest.json dist/",
    "build:clean": "rm -rf node_modules/wasm-bundler && pnpm install --check-files && pnpm clean && pnpm build",
    "build:fix-bundle": "node scripts/fix-bundle.mjs && mm-snap manifest --fix && mm-snap eval --verboseErrors --bundle dist/index.js && cp snap.manifest.json ../../examples/site/",
    "build:fix-deps": "node scripts/fix-smoldot.mjs",
    "build:snap": "rollup -c",
    "build:tsc": "tsc --noEmit",
    "clean": "rimraf dist build",
    "dev": "nodemon --watch src/ --ext ts --ignore src/wasm.ts --exec 'pnpm start'",
    "lint": "run-p lint:exports lint:eslint",
    "lint:eslint": "eslint src test",
    "lint:exports": "ts-unused-exports tsconfig.json --ignoreFiles src/index.ts",
    "lint:fix": "pnpm lint:eslint --fix",
    "package-check": "package-check",
    "serve": "mm-snap serve",
    "start": "pnpm build && pnpm serve",
    "test": "cross-env IS_TESTING=true cross-env NODE_OPTIONS=--max-old-space-size=6144 node --expose-gc --experimental-json-modules ./node_modules/jest/bin/jest.js --runInBand --logHeapUsage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@metamask/browser-passworder": "^4.1.0",
    "@metamask/key-tree": "^7.1.1",
    "@metamask/snaps-ui": "^0.32.2",
    "@polkadot/api": "^9.9.4",
    "@polkadot/keyring": "^10.1.14",
    "@polkadot/util": "^10.1.14",
    "@polkadot/util-crypto": "^10.1.14",
    "@polkadot/wasm-crypto": "^7.2.1",
    "azero-wallet-adapter": "workspace:*",
    "azero-wallet-types": "workspace:*",
    "@metamask/snaps-types": "^1.0.2",
    "eth-rpc-errors": "^4.0.3",
    "sha3": "^2.1.4",
    "@polkadot/types": "^10.9.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.0",
    "@babel/register": "^7.21.0",
    "@lavamoat/allow-scripts": "^2.0.3",
    "@metamask/providers": "^13.0.0",
    "@metamask/snaps-cli": "^1.0.2",
    "@metamask/snaps-rollup-plugin": "^1.0.2",
    "@rollup/plugin-commonjs": "^25.0.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-sucrase": "^5.0.2",
    "@rollup/plugin-typescript": "^11.1.5",
    "@swc/core": "^1.3.88",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^27.5.2",
    "@types/node": "^18.0.6",
    "babel-loader": "^9.1.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.1",
    "metamask-testing-tools": "^1.1.10",
    "nodemon": "^2.0.16",
    "rollup": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "standard-version": {
    "scripts": {
      "postbump": "pnpm manifest:fix"
    }
  }
}
